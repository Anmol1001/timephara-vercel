---
import csrImage from './../../../public/images/timepharma/news/csr_4.jpg' 
import logo from './../../../public/images/logo.png' 
import Image from 'astro/components/Image.astro'
---

<section id="csr" class="mb-32">
    <div id="container" class="h-[80vh] flex items-center">
        <div class="w-full">
            <div class="flex border-1 rounded-2xl gap-12">
                <div class="h-[60vh]">
                    <Image src={csrImage} alt={`csr_image`} class="object-cover h-full w-full border-1 rounded-2xl opacity-0 csr-image"/>
                </div>
                <div class="flex flex-col h-[60vh] w-full justify-center gap-4">
                    <div class="w-72">
                        <Image src={logo} alt={`logo`} class="h-full w-full opacity-0 csr-logo"/>
                    </div>
                    <h1 class="text-6xl font-bold leading-[4.5rem] opacity-0 csr-title">Our Unwavering <span class="text-[#B81D8C]">Commitment to Care</span></h1>
                    <p class="text-xl leading-[3rem] opacity-0 csr-details">Time Pharmaceutical fosters healthier communities through ethical practices, sustainable innovations, and dedicated support for public health and well-being.</p>
                    <span><a href="" class="transition-all duration-500 bg-[#B81D8C] text-white px-6 py-2 text-xl opacity-0 csr-button">Learn more</a></span>  
                </div>
            </div>
        </div>
    </div>
</section>